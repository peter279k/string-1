{
    "name": "christian-riesen/string",
    "type": "library",
    "description": "String handling and manipulation class",
    "keywords": ["string", "string helper"],
    "homepage": "https://github.com/ChristianRiesen/string",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Riesen",
            "email": "chris.riesen@gmail.com",
            "homepage": "http://christianriesen.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "friendsofphp/php-cs-fixer": "^2.2 || ^2.9"
    },
    "autoload": {
        "psr-4": {
            "ChristianRiesen\\StringHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChristianRiesen\\StringHelper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix-syntax": "vendor/bin/php-cs-fixer --diff -v fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
